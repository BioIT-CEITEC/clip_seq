{
  "workflow_description": {
    "name": "CLIP-seq",
    "version": 1.0,
    "label": "CLIP-seq",
    "type": "CLIP-seq",
    "inputs": "raw_fastq/{sample}*fastq.gz",
    "outputs": [
      "cleaned_fastq/{sample}*fastq.gz",
      "mapped/*",
      "logs/{sample}/*",
      "qc_reports/*"
    ],
    "report_index": "qc_reports/all_samples/alignment_RNA_multiqc/multiqc.html",
    "reports":[
       "qc_reports/*"
    ]
  },
  "general_params": [
    "library_name",
    "sample_name",
    "lib_forward_read_length",
    "lib_reverse_read_length"
  ],
  "gui_params": {
    "primary": {
      "annotate_by": {
        "label": "Annotate by",
        "type": "enum",
        "default": "gene_name",
        "list": {
          "gene_name": "gene_name",
          "gene_id": "gene_id"
        },
        "callers": {
          "label": "Callers",
          "type": "enum",
          "default": "pureClip",
          "list": {
            "pureClip": "pureClip",
            "macs2": "macs2"
          }
        }
      }
    },
    "detailed": {
      "keep_dups": {
        "label": "Keep duplicates",
        "type": "string",
        "default": "yes",
        "list": {
          "yes": "yes",
          "no": "no"
        }
      },
      "multimapped": {
        "label": "Keep multimapped reads",
        "type": "string",
        "default": "yes",
        "list": {
          "yes": "yes",
          "no": "no"
        }
      },
      "quality_cutof": {
        "label": "Quality cutof",
        "type": "int",
        "default": 255
      },
      "effective_GS": {
        "label": "Effective genome size stored in DB or references",
        "type": "int",
        "default": 2805636331
      },
      "qval_cutof": {
        "label": "Q-value cutoff",
        "type": "string",
        "default": "0.05"
      },
      "strandness": {
        "label": "Strandness",
        "type": "enum",
        "default": "none",
        "list": {
          "same": "same",
          "opposite": "opposite",
          "none": "none"
        }
      },
      "max_multi_hits": {
        "label": "Maximum hits allowed for multi-mapped reads",
        "type": "int",
        "default": 100
      },
      "read_tagger": {
        "label": "Read tagger method",
        "type": "string",
        "default": "median",
        "list": {
          "median": "'median' for read center",
          "start": "'start' for read start site"
        }
      },
        "merge_size": {
          "label": "Select best peak within this size",
          "type": "int",
          "default": 50
      },
      "extend_peak": {
        "label": "Extend peak to this size if less than it",
        "type": "int",
        "default": 50
      },
      "feat_type": {
        "label": "Feat type",
        "type": "string",
        "default": "gene"
      }
    }
  }
}